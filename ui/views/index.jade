doctype html
html(lang='en', ng-app='executor-ui')
  head
    meta(charset='UTF-8')
    title Code Executor
    link(rel='stylesheet', type='text/css', href='/bower_components/codemirror/lib/codemirror.css')
    link(rel='stylesheet', href='/bower_components/codemirror/theme/dracula.css')
    link(rel='stylesheet', href='/stylesheets/index.css')
  body
    .container(ng-controller='rootCtrl')
      h1#header Docker Code Executor
      ui-codemirror(ng-model='code', ui-codemirror-opts='editorOptions')
      select(ng-model='language', ng-change='setMode()')
        option(value='clike') C
        option(value='python') Python
        option(value='ruby') Ruby
      button(ng-click='executeCode()') Run
      div(ng-show='isError')
        | {{errorMsg}}
      div(ng-hide='isError')
        | {{output}}
    script(src='/bower_components/codemirror/lib/codemirror.js')
    script(src='/bower_components/codemirror/mode/clike/clike.js')
    script(src='/bower_components/codemirror/mode/python/python.js')
    script(src='/bower_components/codemirror/mode/ruby/ruby.js')
    script(src='/bower_components/angular/angular.min.js')
    script(type='text/javascript', src='/bower_components/angular-ui-codemirror/ui-codemirror.js')
    script(src='/javascripts/angular/app.js')
    script(src='/javascripts/angular/controllers/executor-ui.js')
